# Base stats and variables
def stats(stat, name, race, baseStr, baseDex, baseCon, baseInt, baseWis, baseCha):
    stat.chrName=name
    stat.chrRace=race
    stat.chrStr=baseStr
    stat.chrDex=baseDex
    stat.chrCon=baseCon
    stat.chrInt=baseInt
    stat.chrWis=baseWis
    stat.chrCha=baseCha

baseStr=10
baseDex=10
baseCon=10
baseInt=10
baseWis=10
baseCha=10

bonus = input('What is your bonus stat?')
type(bonus)
if bonus == 'Strength':
    baseStr += 2
if bonus == 'Dexterity':
    baseDex += 2
if bonus == 'Intelligence':
    baseInt += 2
if bonus == 'Charisma':
    baseCha += 2

print(baseStr, baseDex, baseCon, baseInt, baseWis, baseCha)
