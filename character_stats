# Base stats and variables
def __stats__(self, name, race, baseStr, baseDex, baseCon, baseInt, baseWis, baseCha):
    self.chrName=name
    self.chrRace=race
    self.chrStr=baseStr
    self.chrDex=baseDex
    self.chrCon=baseCon
    self.chrInt=baseInt
    self.chrWis=baseWis
    self.chrCha=baseCha
    self.chrLvl=1
    self.chrSpd=0
    self.chrHP=0
    self.untrained= -4
    self.bonus=0
    self.trained= self.chrLvl
    self.expert=self.chrLvl+1
    self.master=self.chrLvl+2
    self.legend=self.chrLvl+3

# specifying stats for user choice
stat_dir ={
    'Strength' : self.chrStr,
    'Dexterity' : self.chrDex,
    'Constitution' : self.chrCon,
    'Intelligence' : self.chrInt,
    'Wisdom' : self.chrWis,
    'Charisma' : self.chrCha
}

