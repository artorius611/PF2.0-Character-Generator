def __stats__(self, name, race, baseStr, baseDex, baseCon, baseInt, baseWis, baseCha):
    self.chrName=name
    self.chrRace=race
    self.chrStr=baseStr
    self.chrDex=baseDex
    self.chrCon=baseCon
    self.chrInt=baseInt
    self.chrWis=baseWis
    self.chrCha=baseCha
    self.chrLvl=1
    self.chrSpd=0
    self.chrHP=0

#    specifying stat for user choice
stat_dir ={
    "Strength" : self.chrStr
    "Dexterity" : self.chrDex
    "Constitution" : self.chrCon
    "Intelligence" : self.chrInt
    "Wisdom" : self.chrWis
    "Charisma" : self.chrCha
}
class Race ():
    def goblin(self):
        self.chrDex +=2
        self.chrCha +=2
        self.chrSpd +=25
        self.chrHP +=6
        self.bonus = raw_input("what is your bonus stat?")
        type(self.bonus)
        if self.bonus=self.chrStr:
            self.chrStr +=2
        if self.bonus=self.chrCon:
            self.chrCon +=2
        if self.bonus=self.chrInt:
            self.chrInt +=2
        if self.bonus=self.chrWis:
            self.chrWis +=2
        else:
            print "you cant use a duplicate value. Please choose again"
            self.chrDex -= 2
            self.chrCha -= 2
            self.chrSpd -= 25
            self.chrHP -= 6
            Race ()

