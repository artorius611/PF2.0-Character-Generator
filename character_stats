            self.chrStr +=2
        if self.bonus= 'Constitution' :
            self.chrCon +=2
        if self.bonus= 'Intelligence' :
            self.chrInt +=2
        if self.bonus= 'Wisdom' :
            self.chrWis +=2
        else:
            print "you cant use a duplicate value. Please choose again"
            self.chrDex -= 2
            self.chrCha -= 2
            self.chrSpd -= 25
            self.chrHP -= 6
            Race ()

