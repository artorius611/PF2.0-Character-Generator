# Base stats and variables
def __stats__(self, name, race, chrStr, chrDex, chrCon, chrInt, chrWis, chrCha):
    self.chrName=name ,
    self.chrRace=race ,
    self.chrStr=10 ,
    self.chrDex=10 ,
    self.chrCon=10 ,
    self.chrInt=10 ,
    self.chrWis=10 ,
    self.chrCha=10 ,
    self.chrLvl=1 ,
    self.chrSpd=0 ,
    self.chrHP=0 ,
    self.untrained= -4 ,
    self.trained= self.chrLvl ,
    self.expert=self.chrLvl+1 ,
    self.master=self.chrLvl+2 ,
    self.legend=self.chrLvl+3

# specifying stats for user choice
stat_dir ={
    'Strength' : __stats__.chrStr,
    'Dexterity' : __stats__.chrDex,
    'Constitution' : __stats__.chrCon,
    'Intelligence' : __stats__.chrInt,
    'Wisdom' : __stats__.chrWis,
    'Charisma' : __stats__.chrCha
}

