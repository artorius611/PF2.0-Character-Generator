class Race ():
    def __init__(dwarf):
        dwarf.chrWis += 2
        dwarf.chrCon += 2
        dwarf.chrCha -= 2
        dwarf.chrSpd += 20
        dwarf.chrHP += 10
        bonus = input('What is your bonus stat?')
        type(bonus)
        if bonus == 'Strength':
            baseStr += 2
        if bonus == 'Dexterity':
            baseDex += 2
        if bonus == 'Intelligence':
            baseInt += 2
        if bonus == 'Charisma':
            baseCha += 2
        else:
            print('you cant use a duplicate value. Please choose again')
            stat.chrWis -= 2
            stat.chrCon -= 2
            stat.chrCha += 2
            stat.chrSpd -= 20
            stat.chrHP -= 10
            Race()

