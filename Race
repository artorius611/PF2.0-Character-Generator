class Race ():
    def __init__(dwarf):
        dwarf.chrWis += 2
        dwarf.chrCon += 2
        dwarf.chrCha -= 2
        dwarf.chrSpd += 20
        dwarf.chrHP += 10
        bonus = input('What is your bonus stat?')
        type(bonus)
        if bonus == 'Strength':
            stat.chrStr += 2
        if bonus == 'Dexterity':
            stat.chrDex += 2
        if bonus == 'Intelligence':
            stat.chrInt += 2
        if bonus == 'Charisma':
            stat.chrCha += 2
        else:
            print('you cant use a duplicate value. Please choose again')
            dwarf.chrWis -= 2
            dwarf.chrCon -= 2
            dwarf.chrCha += 2
            dwarf.chrSpd -= 20
            dwarf.chrHP -= 10
            Race()

    def __init__(elf):
        elf.chrDex += 2
        elf.chrInt += 2
        elf.chrCon -= 2
        elf.chrSpd += 30
        elf.chrHP += 6
        bonus = input('What is your bonus stat?')
        type(bonus)
        if bonus == 'Strength':
            stat.chrStr += 2
        if bonus == 'Dexterity':
            stat.chrDex += 2
        if bonus == 'Intelligence':
            stat.chrInt += 2
        if bonus == 'Charisma':
            stat.chrCha += 2
        else:
            print('you cant use a duplicate value. Please choose again')
            dwarf.chrDex -= 2
            dwarf.chrInt -= 2
            dwarf.chrCon += 2
            dwarf.chrSpd -= 30
            dwarf.chrHP -= 6
            Race()

    def __init__(gnome):
        gnome.chrCon += 2
